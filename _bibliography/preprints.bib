mendeley-groups = {VSC Theory},
month = {mar},
title = {{[17] Quantum Simulations of Vibrational Strong Coupling via Path Integrals}},
url = {https://arxiv.org/abs/2203.03001v1 http://arxiv.org/abs/2203.03001},
