	isbn = {2111.12770v1},
	mendeley-groups = {VSC Theory},
	month = {nov},
	title = {{[16] Polariton Relaxation under Vibrational Strong Coupling: Comparing Cavity Molecular Dynamics Simulations against Fermi's Golden Rule Rate}},
	url = {https://arxiv.org/abs/2111.12770v1},
	year = {2021},
